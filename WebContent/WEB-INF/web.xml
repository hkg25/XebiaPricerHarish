<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Pricer</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  <servlet-name>ProductServlet</servlet-name>
  <servlet-class>com.xebia.pricer.servlet.ProductServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>ProductServlet</servlet-name>
   <url-pattern>/product/*</url-pattern>
  </servlet-mapping>
  
   <servlet>
  <servlet-name>StorePriceServlet</servlet-name>
  <servlet-class>com.xebia.pricer.servlet.StorePriceServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>StorePriceServlet</servlet-name>
   <url-pattern>/storePrice/*</url-pattern>
  </servlet-mapping>
</web-app>